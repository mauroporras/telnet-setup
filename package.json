{
  "name": "telnetserver",
  "version": "1.0.2",
  "description": "NodeJS and ReactJS project connecting to Leica MS60 via Geocom API and streaming data to Firebase Firestore using TCP Telnet protocol.",
  "main": "main.js",
  "author": "Nathan Barnes <nbarnes@azahner.com>",
  "dependencies": {
    "electron-is-dev": "^3.0.1",
    "electron-log": "^5.2.2",
    "firebase-admin": "^12.5.0",
    "react-scripts": "^5.0.1",
    "rxjs": "^7.3.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "debug": "^4.3.2",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "wait-on": "^8.0.1"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"npm run start-server\" \"npm run start-react\" \"npm run electron-wait\"",
    "start-server": "nodemon --experimental-json-modules server/index.js",
    "start-react": "npm run start --prefix client",
    "electron-wait": "wait-on http://localhost:3006 && electron .",
    "electron": "electron .",
    "build-client": "npm run build --prefix client",
    "build": "npm run build-client && electron-builder --config electron-builder.json",
    "postinstall": "npm run build-client"
  },
  "proxy": "http://localhost:3002",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=16"
  }
}
